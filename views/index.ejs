<html>
  <head>
    <link href="css/bootstrap.min.css" type="text/css" rel="stylesheet" font-size= "32px"/>
    <link rel="stylesheet" href="css/style.css">
    <title>TodoList</title>
  </head>

  <body style=" background-color:rgba(140,156,209,0.4);">

    <!--  navbar  -->
    <nav class="navbar navbar-fixed-top" style="background-color:rgb(100,100,100);">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" >
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/" style="color:white;font-size:25px;">What's on Your mind</a>
          </div>

        </div>
        </body>
    </nav>
    <!--  navbar -->

 <section style="background-color:rgba(60,88,167,1.0)">

  <div class="container" style="  width:400px; height:500px; ">

    <form class="form-horizontal" method="post" action="/submit">
      <div class="row" >
           <div class="col-lg-20">
               <h1 class="section-heading" style="color:white;font-size:40px;margin-top:150px;" >What's on your mind?</h1>

            </div>
     <div class="form-group">
        <div class="col-md-12">
          <input type="text" class="form-control input-lg" name="title" placeholder="title">
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12" center>
          <textarea class="form-control input-lg" rows="5" name="content" placeholder="content"></textarea>
        </div>
      </div>

      <div class="form-group">
        <div style="text-align:center;">
          <button type="submit" class="btn btn-primary btn-lg " style="color:white  ">Post</button>
        </div>
      </div>

    </form>
  </div>
 </section>


    <!-- contain -->
    <div class="container" style="margin-top:80px;">
        <% if (listinfos.length) { %>
          <% listinfos.forEach(function(listinfos){ %>
          <div class="col-md-6" style="height:300px;
                                       padding:10px 50px 20px 0px;">
              <div  style="height:100%;
                           width:100%;
                           margin: auto auto;
                           background-color:#6072AF;
                           overflow:hidden;
                           border-radius:50px;">
                <h2 style="text-align:center; color:rgb(230,230,230);font-size:30px;font-weight:bolder;" >
                  <%= listinfos['title'] %>
                </h2>
                <p style="text-align:center; color:rgb(230,230,230);font-size:18px ;padding:3px 3px 3px 3px;">
                  <%= listinfos['content'] %>
                </p>
              </div>
              <div style="width:16px;
                          height:16px;
                          right:18px;
                          bottom:0px;
                          position: absolute;">

              </div>
              <div style="width:16px;
                          height:16px;
                          right:2px;
                          bottom:0px;
                        position: absolute;">

              </div>
          </div>
          <% }) %>
        <% } %>
    </div>

    <footer style="background-color:rgb(50,50,50);
                   width:100%;
                   height:80px;
                   position: relative;
                   margin-top: 50px;">

                   <p style="line-height:80px;
                             text-align:center;
                             font-size:30px;
                             margin-bottom:0px;
                             color:#EEEEEE;">
                     Create by TingYuanKeke.
                   </p>
    </footer>

    <!--link-->
    <script type="text/javascript" src="js/jquery-2.2.2.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <!--link-->


</html>
